NAME = ft_display_file
CFLAGS = -Wall -Wextra -Werror
CFILES = display_file.c

all: 
	gcc $(CFLAGS) -o $(NAME) $(CFILES)

clean:
	/bin/rm -f *.o

fclean:
	/bin/rm -f $(NAME)
